{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": "./src", // Base directory for resolving paths
    "paths": {
      "@components/*": ["components/*"], // Alias for components
      "@providers/*": ["providers/*"], // Alias for providers
      "@assets/*": ["assets/*"], // Alias for assets
      "@data/*": ["data/*"] // Alias for data
    }
  },
  "include": ["src/**/*"], // Include your source files
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
